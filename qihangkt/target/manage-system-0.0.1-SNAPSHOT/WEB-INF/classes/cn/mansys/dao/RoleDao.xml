<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mansys.dao.RoleDao">
	
	<select id="getAllRole" resultType="cn.mansys.model.Role">
		select *
		from role
	</select>
	<select id="getRoleById" resultType="cn.mansys.model.Role">
		select * from role where id=#{id}
	</select>
	<select id="getRoleByName" resultType="cn.mansys.model.Role">
		select * from role where rname=#{rname}
	</select>
	
	
</mapper>